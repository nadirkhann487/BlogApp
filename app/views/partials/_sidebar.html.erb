<div id="sidebar">
              <ul>

                <li>
                  <div id="search">
                    <%= search_form_for @q do |f| %>
                    <%= f.text_field :name_or_body_cont %>
                    <%= f.submit "Search" %>
                    <% end %>
                  </div>
                  <div style="clear: both;"></div>
                </li>
                      
                <li>
                  <h2>Categories</h2>
                  <ul>
                    <% all_categories.each do |cat| %>
                      <li><%= link_to cat.name,category_path(:id => cat.id) %></li>
                    <% end %>
                  </ul>
                </li>
       
                <li>
                  <h2>Blogroll</h2>
                  <ul>
                    <% all_posts.each do |post| %>
                      <li><%= link_to post.name,post_path(:id => post.id) %></li>
                    <% end %>
                    
                  </ul>
                </li>

              </ul>
            </div>
            <!-- end #sidebar -->